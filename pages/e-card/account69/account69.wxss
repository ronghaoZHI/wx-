/* pages/e-card/account69/account69.wxss */
.section_tab.style1 .tab_hd {
  font-size: 30rpx;
}

.section_tab .ul {
  padding: 0 20rpx;
}

.section_tab .li {
  margin-top: 20rpx;
  padding: 30rpx 50rpx;
  background: #fff;
}

.section_tab .li .li_hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
  
}

.section_tab .li .li_hd .li_hd_hd {
  font-size: 30rpx;
}

.section_tab .li .li_hd .li_hd_bd {
  flex: 1;
  text-align: right;
}

.section_tab  .li_hd .li_hd_bd image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.section_tab .li .li_bd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: flex-end;
  -webkit-align-items: flex-end;
  align-items: flex-end;
  text-align: right;
  position: relative;
}
.section_tab .li .li_bd text{
  color: #f60;
}
.section_tab .li .li_bd .num{
  font-size: 40rpx;
}
.section_tab  .li_bd .li_bd_hd {
  margin-top: 30rpx;
}

.section_tab  .li_bd .li_bd_hd image {
  display: block;
  width: 160rpx;
  height: 195rpx;
}

.section_tab  .li_bd .li_bd_bd {
  flex: 1;
  font-size: 30rpx;
  /* line-height: 1; */
  color: #666666;
}

.section_tab  .li_bd .li_bd_bd image {
  width: 25rpx;
  opacity: none;
}

.section_tab  .li_bd .close {
  padding: 15rpx;
  position: absolute;
  bottom: -1rpx;
  right: -15rpx;
}

.section_tab  .li_bd .close:active {
  opacity: 0.7;
}

.section_tab  .li_bd .close image {
  display: block;
  width: 25rpx;
}
