/* pages/publish/car/car.wxss */

/* 起始地址选择 */

.title {
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
}

.section_address {
  margin-top: 5rpx;
  padding: 0;
}

/* 上传图片 */

.weui-uploader__hd {
  font-size: 30rpx;
}

.weui-uploader__bd {
  overflow: visible;
}

.weui-uploader__file {
  position: relative;
}

.weui-uploader__file .close {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 20rpx;
}

.uploader_wrap {
  /* background: transparent!important; */
}

/* 表单 */

form {
  display: block;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 34rpx;
}

.weui-cells {
  background: transparent;
}

.weui-cell {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  font-size: 34rpx;
}

.weui-cell::before, .weui-cells:after {
  display: none;
}

.weui-input {
  height: auto;
  min-height: auto;
  line-height: 1;
}

.weui-label {
  width: 165rpx;
  font-size: 34rpx;
}

.placeholder {
  font-size: 30rpx;
  color: #999;
}

.textarea_wrap {
  align-items: flex-start;
}

textarea {
  background: #fff;
  display: block;
  width: 100%;
  height: 110rpx;
  font-size: 24rpx;
  padding-top: 7rpx;
}

.hidden {
  display: none;
}

/* 验证码 */

.weui-vcode-btn {
  display: block;
  font-size: 30rpx;
  color: #333;
  background-color: #e5e5e5;
  margin: -20rpx 0rpx;
  padding: 20rpx 30rpx;
  height: auto;
  line-height: 50rpx;
  border-left: 20rpx solid #f7f7f7;
}

.weui-vcode-btn:active {
  opacity: 0.7;
  color: #333;
}

.yzm_wrap {
  padding: 0;
  padding-left: 30rpx;
}

.yzm_wrap .weui-label {
  padding: 20rpx 0;
}

.btn_wrap {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  font-size: 36rpx;
}
