  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-top: 1px solid #fff;
   padding-top: 5rpx; 

}

.footer>view {
