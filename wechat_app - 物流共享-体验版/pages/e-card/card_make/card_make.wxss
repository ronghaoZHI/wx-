/* pages/blank/blank.wxss */
page,
.page,
.page_bd{
  width: 100%;
  height: 100%;
  position: relative
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.page_bd{
  padding: 50rpx 90rpx 50rpx 90rpx;
  box-sizing: border-box;
}
.section_text{
  font-size: 30rpx;
  color: #fff;
}
.section_img{
  display: flex;
  justify-content: space-between;
  margin-top: 90rpx;
  margin-bottom: 40rpx;
}
.section_img image,.section_img text{
  display: block;
}
.section_img text{
  color: #ff8400;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.section_img image{
  width: 250rpx;
}
.section_video{
  display: block;
}
.section_video video{
  display: block;
  width: 100%;
  height: 315rpx;
}